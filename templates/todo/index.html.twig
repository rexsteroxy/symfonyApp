{% extends 'default/todo.app.html.twig' %}

{% block title %}Rex TodoController!{% endblock %}


{% block form %}

<div class="container">
<div class="header">
    <h2>My To Do List</h2>
    <form action="{{path('create_task')}}" method="post">
        <input type="text" name="title" id="myInput" placeholder="Task title..." />
        <button type="submit" class="addBtn">Add a task</button>
    </form>
</div>
</div>

{% endblock %} 


{% block content %}

<div class="container">
        <div class="row">

        <div class="col-md-3"></div>
         <div class="col-md-6">
         <ul>
        {% for task in tasks %}
            <li {% if task.status%}class="checked"{% endif %}>
                 <span class="task-list-item">{{task.title}} </span>
                 <a onclick="return confirm('Are you sure to delete?')" href="{{path('task_delete',{'id':task.id})}}"><span class="close">DELETE</span></a>
                 <a href="{{path('switch_status',{'id':task.id})}}"> <span>UPDATE</span></a>
            </li>
        {% endfor %}


    </ul> 
         </div>
          <div class="col-md-3"></div>
       
        </div>

</div>

    <div class="navigation">
        {{ knp_pagination_render(tasks) }}
    </div>
{% endblock %}
